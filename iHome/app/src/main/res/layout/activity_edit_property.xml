<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".EditPropertyActivity"
    android:background="@drawable/setting">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Property"
                android:textStyle="bold"
                android:textSize="24dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/edit_propertyImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/noimage"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_propertyName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Property Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Enter new Name"
        android:layout_marginTop="15dp"
        android:id="@+id/new_propertyName"
        android:inputType="text"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_propertyDetail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Property detail"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Enter new details"
        android:layout_marginTop="15dp"
        android:id="@+id/new_propertyDetail"
        android:inputType="text"
        android:padding="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateProperty"
        android:text="Update"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_background"
        android:layout_marginTop="15dp"/>

</LinearLayout>