<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".DeleteAccountActivity"
    android:background="@drawable/setting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you leaving us?"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="10sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Once you delete the account, you will no longer have the right to access the account. All the data under this account will be erased "
        android:textAlignment="center"
        android:padding="15sp"/>

    <Button
        android:id="@+id/btn_deleteAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete account"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:padding="15sp"/>

</LinearLayout>
