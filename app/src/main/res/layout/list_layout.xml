<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/list_Image"
        android:src="@drawable/noimage"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_Image"
        android:layout_toEndOf="@id/list_Image"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_toStartOf="@id/priceBox"
        android:layout_toLeftOf="@id/priceBox">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_Name"
            android:text="Property Name"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_Sale"
            android:text="Property Sale"
            android:layout_below="@+id/list_Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_Detail"
            android:text="Property Details"
            android:layout_below="@id/list_Sale"
            android:singleLine="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/priceBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type"
            android:textSize="10sp"
            android:layout_below="@id/list_price"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>