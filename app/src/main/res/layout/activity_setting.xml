<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.official.ihome.SettingActivity"
    android:background="@drawable/setting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limit your search"
            android:textColor="#000000"
            android:textSize="35sp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="as you want."
            android:textColor="#000000"
            android:textSize="35sp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/hello"/>
    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:progressDrawable="@drawable/seekbar_style"
        android:splitTrack="false"
        android:thumb="@drawable/seekbar_thumb" />

    <TextView
        android:id="@+id/seekBarPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="search range"
        android:textAlignment="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/seekBarInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="range covered"
        android:textColor="#000000"
        android:layout_marginTop="5dp"/>

</LinearLayout>
